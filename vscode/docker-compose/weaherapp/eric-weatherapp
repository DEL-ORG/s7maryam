version: '3'
services:
  # Database Service
  db:
	container_name: db
	image: mysql:8.0.2   
	environment:
  	- MYSQL_ROOT_PASSWORD=my-secret-pw
	volumes:
  	- mysql_data:/var/lib/mysql
	networks:
  	- tarzan
	restart: always
	ports:
  	- 3306:3306
  # Authentication Service
  auth:
	container_name: auth
	image:  devopseasylearning/tarzan-auth:v0.0.1
	environment:
  	- DB_HOST=db
  	- DB_PASSWORD=my-secret-pw
	depends_on:
  	- db
	networks:
  	- tarzan
	restart: always
	expose:
  	- 8080
	ports:
  	- 8080:8080


  # Redis Service
  redis:
	container_name: redis
	image: redis:latest
	ports:
  	- "6379:6379"
	environment:
  	- REDIS_USER=redis
  	- REDIS_PASSWORD=redis
	networks:
  	- tarzan
	restart: always
	volumes:
  	- data_redis:/data
  # Weather Service
  weather:
	container_name: weather
	image:  devopseasylearning/tarzan-weather:v0.0.2
	environment:
  	- APIKEY=ecbc396f46mshb65cbb1f82cf334p1fcc87jsna5e962a3c542
	expose:
  	- 5000
	ports:
  	- 5000:5000
	networks:
  	- tarzan
	restart: always

  # UI Service
  ui:
	container_name: ui
	image: devopseasylearning/tarzan-ui:v0.0.1
	ports:
  	- "3000:3000"
	depends_on:
  	- auth
	environment:
  	- AUTH_HOST=auth
  	- AUTH_PORT=8080
  	- WEATHER_HOST=weather
  	- WEATHER_PORT=5000
  	- REDIS_USER=redis
  	- REDIS_PASSWORD=redis

	networks:
  	- tarzan
	restart: always

networks:
  tarzan:
	driver: bridge

volumes:
  mysql_data:
  data_redis:
